%% A quick test of path processing

	lang ru
	writepath %path myfile/testing
	echo %path
	writepath %path tmp:able
	echo %path
	readpath %path tests.wav voice=ru/dmitry
	echo %path
	pathname myfile var/myfile &number 123 prefix="tmp:"
	pathname myfile var/myfile &number 123
	path %path myfile prefix=ram: extension={.wav}
	echo %path
	exit

